<form method="post" action="{{ path('app_category_delete', {'id': category.id}) }}" onsubmit="return confirm('Êtes-vous certain de vouloir supprimer la catégorie #{{ category.id }} : {{ category.title }} ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
    <div id="deleteBtn"><button class="btn">Supprimer</button></div>
</form>
