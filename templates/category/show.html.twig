{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Détails de la catégorie #{{ category.id }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ category.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ category.type }}</td>
            </tr>
        </tbody>
    </table>

    <div class="btnContainer">

        <div class="btn"><div><a href="{{ path('app_category_index') }}">Retour</a></div></div>

        <div class="btn"><div><a href="{{ path('app_category_edit', {'id': category.id}) }}">Modifier</a></div></div>

    </div>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
